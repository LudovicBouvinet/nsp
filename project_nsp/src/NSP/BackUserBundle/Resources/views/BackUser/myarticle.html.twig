{% extends "NSPBackUserBundle::layout.html.twig" %} {% block title %}{{ parent() }} - Espace Personnel {% endblock %} {% block css %}
<link rel="stylesheet" href="{{ asset('bundles/nspbackuser/css/styles.css') }}">
{% endblock %} 

{% block body %}
<div class="containerspaceperso">
<div class="menugauche">
    <a href="{{ path('nsp_back_user_profil') }}"><div class="myprofil"></div></a> 
    <a href="{{ path('nsp_back_user_message') }}"><div class="iconmsg"></div></a>
    <a href="{{ path('nsp_back_user_mesarticles') }}"><div class="iconart"></div></a>  
</div>

<div class="zoneperso">
       <div class="mesarticle-article">
           
            <div class="topmsg">
                <div class="txtmsg">Mes Articles</div>
            </div> 
            
            <div class="mymsgs">
              
              {% set i = 0 %}
               
              {% for article in articles %}

                <a class="lienmsg" href="{{ path('nsp_article_article', {'id' : article.id }) }}" >
                  <div class="encarmsg">
                    <div class="resummsg">
                       <div class="firstlign">
                            <div class="auteur">{{article.titre}}</div>
                            <div class="date">{{article.datePublication | date('Y-m-d')}}</div>
                        </div>
                                <div class="noteprev" data-note="{{moyenne[i][0][1]}}">
            
                        <div class="etoile" alt="" data-note="1" ></div>
                        <div class="etoile" alt="" data-note="2" ></div>    
                        <div class="etoile" alt="" data-note="3" ></div>
                        <div class="etoile" alt="" data-note="4" ></div>
                        <div class="etoile" alt="" data-note="5" ></div>
            
            
            
        </div>
                        <div class="lastlign">
                            <div class="pitchmsg">{{article.chapeau}}</div>
                        </div>
                    </div>   
                  </div>
                </a>
                
                {% set i = i + 1 %}

              {% endfor %}

                
            </div>                    
           
       </div>

</div>
</div>


<script>

  $('.noteprev').each(function(){
      
      var moyenne = Math.round($(this).data('note'));

      for ( i=0; i<moyenne; i++){
          z = i +1;
          $(this).find($('.etoile:nth-of-type('+z+')'))
          .css('opacity','1')
      }
  });

  var heightMenuGauche = $('.zoneperso').height();
  $('.menugauche').css('height', heightMenuGauche +'px');

  $(window).resize(function () {
    var heightMenuGauche = $('.zoneperso').height();
    $('.menugauche').css('height', heightMenuGauche +'px');        
  });

</script>
{% endblock %}


