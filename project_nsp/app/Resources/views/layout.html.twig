  <script>
  	$('.connexion').click(function(){
  		$('.div-noire').fadeIn();
  		$('.pop-up-connexion').fadeIn();
  		$('html').css('overflow', 'hidden');
  	});

  	$('.div-noire').click(function(){
  		$('.div-noire').fadeOut();
  		$('.pop-up-connexion').fadeOut();
        $('.popup-inscri').fadeOut();
  		$('html').css('overflow', 'auto');
  	});
      
      $('.inscription').click(function(){
          
  		$('.div-noire').fadeIn();
  		$('.popup-inscri').fadeIn();
          
          
          
      });
      
      function centreInsc(){
      largeurFenetre = window.innerWidth;
      largeurPopup = $('.popup-inscri').width();
      marge = ( largeurFenetre - largeurPopup ) /2;
           $('.popup-inscri').css('left',marge);
      };
      centreInsc();


      function centreCo(){
      largeurFenetre = window.innerWidth;
      largeurPopup = $('.pop-up-connexion').width();
      marge = ( largeurFenetre - largeurPopup ) /2;
           $('.pop-up-connexion').css('left',marge);
      };
      centreCo();

    $(window).resize(function () {
        centreInsc();
        centreCo();
    });
  
      

  </script>
