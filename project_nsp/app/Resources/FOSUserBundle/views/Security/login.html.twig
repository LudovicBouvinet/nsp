{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

    <p class="connexion-paragraphe">Connexion</p>
	<p>	
    <label for="username">Votre identifiant</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="connexion-input" required="required" />
    </p>

    <p>
    <label for="password">Votre mot de passe</label>
    <input type="password" id="password" name="_password" class="connexion-input" required="required" />
    </p>
    
    <br>
    <input type="submit" id="_submit" name="_submit" class="connexion-submit" value="Connexion" />
</form>

{% endblock fos_user_content %}
